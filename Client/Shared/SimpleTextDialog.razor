<MudDialog>
    <DialogContent>
        <MudContainer Style="max-height: 500px; overflow-y: scroll; max-width: 500px">
            <MudText style="white-space: pre-line">@Text</MudText>
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public string Text { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
}
