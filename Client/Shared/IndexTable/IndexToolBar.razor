@inject NavigationManager NavigationManager

<MudText Class="fw-bold" Typo="Typo.h3">@GetDisplayPathName()</MudText>
<MudFab Class="ml-3" StartIcon="@Icons.Filled.Add" Color="Color.Success" OnClick="@(() => NavigationManager.NavigateTo($"{PathName}/add"))"/>
<MudSpacer />
<MudTextField @bind-Value="Search" Placeholder="Search" Adornment="Adornment.Start" Immediate=true AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium"/>

@code {
    [Parameter] public string PathName { get; set; } = string.Empty;

    private string _search = string.Empty;
    [Parameter] public string Search
    {
        get => _search;
        set
        {
            if (_search == value) return;

            _search = value;
            SearchChanged.InvokeAsync(value);
        }
    }
    [Parameter] public EventCallback<string> SearchChanged { get; set; }

    public string GetDisplayPathName()
    {
        if (PathName.Length <= 2)
            return PathName;
        return PathName[0].ToString().ToUpper() + PathName.Substring(1);
    }
}