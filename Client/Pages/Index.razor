@page "/"
@inject NavigationManager NavigationManager
@attribute [Authorize]

<MudPaper Class="d-flex flex-wrap gap-4" Elevation="0">
    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Filled.Person" Color="Color.Tertiary"
        Size="Size.Large" OnClick="@(() => NavigationManager.NavigateTo("characters"))">Characters</MudButton>
    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Filled.CrueltyFree" Color="Color.Tertiary"
        Size="Size.Large" OnClick="@(() => NavigationManager.NavigateTo("creatures"))">Creatures</MudButton>
    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Filled.BackHand" Color="Color.Tertiary"
        Size="Size.Large" OnClick="@(() => NavigationManager.NavigateTo("forcepowers"))">Force Powers</MudButton>
    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Filled.FlashOn" Color="Color.Tertiary"
        Size="Size.Large" OnClick="@(() => NavigationManager.NavigateTo("techpowers"))">Tech Powers</MudButton>
    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Filled.PersonAdd" Color="Color.Tertiary"
        Size="Size.Large" OnClick="@(() => NavigationManager.NavigateTo("abilities"))">Abilities</MudButton>
    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Filled.Star" Color="Color.Tertiary"
        Size="Size.Large" OnClick="@(() => NavigationManager.NavigateTo("classes"))">Classes</MudButton>
    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Filled.AutoFixHigh" Color="Color.Tertiary"
        Size="Size.Large" OnClick="@(() => NavigationManager.NavigateTo("weapons"))">Weapons</MudButton>
    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Filled.Build" Color="Color.Tertiary"
        Size="Size.Large" OnClick="@(() => NavigationManager.NavigateTo("weaponproperties"))">Weapons</MudButton>
    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Filled.DirectionsBoat" Color="Color.Tertiary"
        Size="Size.Large" OnClick="@(() => NavigationManager.NavigateTo("ships"))">Ships</MudButton>
    <MudButton Variant="Variant.Filled" StartIcon="@Icons.Filled.Fort" Color="Color.Tertiary"
        Size="Size.Large" OnClick="@(() => NavigationManager.NavigateTo("encounters"))">Encounters</MudButton>
</MudPaper>
